#############################################################
# Aliases
#############################################################

# reset current zshrc
alias zshrc="exec zsh -l"
alias src="exec zsh -l"

alias bashrc="bash -l"
alias chbash="exec bash -l"

alias vi=vim

# print time
alias t="date +%H:%M"

if ! test "$(which gvim)"; then
  if test "$(which mvim 2> /dev/null)"; then
    alias gvim="$(which mvim)"
  else
    alias gvim="$(which vim)"
  fi
fi

# print date
alias d="date +%b-%d-%Y"

# print date and time
alias dt="echo $(date +%b-%d-%Y) @ $(date +%H:%M)"

# bundle exec shortcut
alias be="bundle exec"

# bundle install shortcut
alias bi="bundle install --path ./vendor/bundle"

# bundle update shortcut
alias bu="bundle update"

# ls colors shortcut
# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
else # OS X `ls`
    colorflag="-G"
fi

# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -laF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Enable aliases to be sudo’ed
alias sudo='sudo '

# IP addresses
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="sudo ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
  alias "$method"="lwp-request -m '$method'"
done

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# shortcut to quicly remove vim temp files
alias rmswp='rm -fv ~/.vimswap/* ; find . -type f -name *.swp | xargs rm -fv'

if test "$(which ack-grep 2> /dev/null)"; then
  alias ack="ack-grep"
fi

# git aliases
alias gco="git checkout"
alias gpush="git push"
alias gup="git push"
alias gpull="git pull"
alias gpu="git pull"
alias gmerge="git merge"
alias gstash="git stash"
alias gstatus="git status"
alias gst="git status"
alias gdiff="git diff | vidiff -"
alias gd="git diff | vidiff -"
alias gcp="git cp"
alias gmv="git mv"
alias grm="git rm"
alias gblame="git blame"
alias gbl="git blame"
alias gshow="git show"
alias gsh="git show"
alias gbr="git branch -v"
alias gba="git branch -v -a"
alias gg="git grep"
alias gprune="git pull --all && git branch --merged develop | grep -v 'master$\|develop$' | xargs git branch -d"

alias g=git
alias get=git
alias gti=git
alias got=git


# tig aliases
alias tstatus="tig status"
alias tst="tig status"
alias tshow="tig show"
alias tblame="tig blame"
alias tbl="tig blame"

alias bye="sudo shutdown -h now"

# dir trav
alias ..='cd ..'

# github
alias gh="if [ \`uname -s\` = \"Darwin\" ]; then browser=\"open\"; else browser=\"xdg-open\"; fi; $browser \`git remote -v | grep git@github.com | grep fetch | head -1 | cut -f2 | cut -d' ' -f1 | sed -e's/:/\//' -e 's/git@/http:\/\//'\`"

# docker > sudo
#alias docker="sudo docker"

# thefuck -> fuck
alias fuck='eval $(thefuck $(fc -ln -1))'

# heroku
alias herouk=heroku
alias heorku=heroku
alias hero=heroku
alias h=heroku

# docker-compose
alias dc=docker-compose
alias dcu="docker-compose up"
alias dcb="docker-compose build"
alias dcr="docker-compose run --service-ports"
alias dcrm="docker-compose run --rm --service-ports"

# go random
alias Go="cd $(go env GOPATH)/src/github.com/jmervine/"
alias Goh="cd $(go env GOPATH)/src/github.com/heroku/"

# hub
#which hub > /dev/null && eval "$(hub alias -s)"


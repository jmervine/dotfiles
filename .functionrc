  /usr/bin/vim -f "sudo:$@"
}

function gvim() {
  /usr/bin/gvim -f "$@" &
}

function vim() {
  /usr/bin/gvim -f "$@" &
}

function gvimdiff() {
  /usr/bin/gvimdiff -f "$@" &
}

function vimdiff() {

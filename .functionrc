}

function do_pry() {
  PRYCMD="$(which pry)"
  IRBCMD="$(which irb)"
  if test -e "$(which pry)"
  then
    echo "Starting $PRYCMD"
    $PRYCMD
  else
    echo "Starting $IRBCMD"
    $IRBCMD
  fi
}

function irb() {
  do_pry
}

function pry() {
  do_pry
}

function _irb() {
  command irb
}
